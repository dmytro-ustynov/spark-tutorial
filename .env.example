# Environment variables for Cybersecurity Analytics Lab

# Kafka Configuration
KAFKA_BROKER=kafka:29092
KAFKA_TOPIC=security-events

# PostgreSQL Configuration  
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=security_analytics
POSTGRES_USER=spark_user
POSTGRES_PASSWORD=spark_password

# Log Generator Configuration
LOG_GENERATOR_PORT=3000
BASELINE_RATE=50
ATTACK_DURATION=300000

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_APP_NAME=SecurityAnalytics

# Optional: External services
KAFKA_UI_PORT=8080
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
